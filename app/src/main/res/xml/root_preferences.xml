<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="ED Companion">

        <PreferenceScreen
            android:clickable="true"
            android:defaultValue="Default value"
            android:enabled="true"
            android:key="loginEDApi"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/loginText" />
    </PreferenceCategory>
    <PreferenceCategory android:title="EDSM">

        <EditTextPreference
            android:key="pref_edsm_cmdr"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Commander Name" />
        <EditTextPreference
            android:key="pref_edsm_api_key"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="API Key" />
        <PreferenceScreen
            android:clickable="true"
            android:defaultValue="Default value"
            android:enabled="true"
            android:key="loginEDSM"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Login"
            />
    </PreferenceCategory>
</PreferenceScreen>
